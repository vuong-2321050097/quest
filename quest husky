{
  "name": "git-lint-checker",
  "version": "1.0.0",
  "description": "Automated code quality check before git commit.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky"
  },
  "keywords": [
    "git-hook",
